<%= form_with(model: route) do |form| %>
  <% if route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% route.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_at %>
    <%= form.datetime_select :start_at %>
  </div>

  <div class="field">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at %>
  </div>

  <div class="field">
    <%= form.label :travel_time %>
    <%= form.time_select :travel_time %>
  </div>

  <div class="field">
    <%= form.label :total_stops %>
    <%= form.number_field :total_stops %>
  </div>

  <div class="field">
    <%= form.label :action %>
    <%= form.check_box :action %>
  </div>

  <div class="field">
    <%= form.label :dirver_id %>
    <%= form.text_field :dirver_id %>
  </div>

  <div class="field">
    <%= form.label :vehicle_id %>
    <%= form.text_field :vehicle_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
